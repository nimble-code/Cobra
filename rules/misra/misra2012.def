def m12_rule16_2
	r
	m case
	n; n
	m & :
	b; b
	%{
		if (.mark == 0)
		{	Next;
		}
		.mark = 0;
		if (.curly <= 1)
		{	Next;
		}
		q = .;
		while (q.txt != "{" || q.curly >= .curly)
		{	q = q.prv;
		}
		q = q.prv;	# switch ( .* ) { ... case
		if (q.txt == ")" && q.jmp != 0)
		{	q = q.jmp;
			q = q.prv;
			if (q.txt == "switch")
			{	Next;
		}	}
		add_pattern(M12_R16_2, q, .);
	%}
	ps caption M12_R16_2 (Required) A switch label shall only be used when the most closely-enclosing compound statement is the body of a switch statement.
end

