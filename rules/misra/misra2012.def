def m12_rule13_6
	r; m sizeof; n
#	c /[-=\+\(]		# xxx false match on: sizeof( (array) )
	%{
		if (.mark == 0 || .txt != "(") { Next; }
		r = .prv;
		q = .jmp;
		.mark = 0;
		while (. != q)
		{	if (.txt == "++"
			||  .txt == "--"
			||  .txt == "="
			||  .txt == "+="
			||  .txt == "-="
			||  .txt == "*="
			||  .txt == "/=")
			{	r.mark = 1;
			} else
			{	if (.txt == "(")
				{	. = .prv;
					if (@ident)
					{	r.mark = 1;
					}
					. = .nxt;
			}	}
			. = .nxt;
		}
	%}
	ps create M12_R13_6
	ps caption M12_R13_6 (Mandatory) The operand of sizeof shall not have side effects
end

