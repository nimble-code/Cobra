	print "Ls: " size(LO) "\n";	# 238
	print "Us: " size(UO) "\n";	# 465
	print "Good: " size(GoodModule) "\n";
	print "Bad : " size(BadModule) "\n";
	cnt = 0;
	unset Accepted;
	for (i in GoodModule)
	{	if (BadModule[i.txt] > 0)
		{	cnt++;
		} else
		{	Accepted[i.txt]++;
	}	}
	print "Good and Bad: " cnt "\n";
