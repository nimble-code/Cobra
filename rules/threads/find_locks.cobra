%{
	unset Numbers;
	p = pset(Smaller);
	while (p.seq > 0)
	{	x = p.p_start;
		y = p.p_end;
		if (x.txt == "mutex_lock")
		{	x = x.nxt;
			unset LockName;
			if (x.txt == "(")
			{	x = x.nxt;
				str = "";
				while (x.txt != ")")
				{	str = str + x.txt;
					x = x.nxt;
				}
				LockName[str]++;
		}	}
		nl = size(LockName);
		Numbers[nl]++;
		p = p.nxt;
	}
	Stop;
%}
%{
	for (i in Numbers)
	{	print "NrLocks: " Numbers[i.txt] "\t" i.txt "\n";
	}
	Stop;
%}
